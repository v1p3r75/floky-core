{
    "name": "v1p3r75/floky-core",
    "description": "The Floky framework core",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Floky\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "v1p3r75",
            "email": "elfriedv16@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "eftec/bladeone": "^4.9",
        "scrivo/highlight.php": "v9.18.1.10",
        "phpmailer/phpmailer": "^6.8",
        "vlucas/phpdotenv": "^5.6",
        "symfony/var-dumper": "^6.3",
        "blakvghost/php-validator": "^1.1",
        "symfony/console": "^6.4",
        "symfony/process": "^6.4"
    },
    "require-dev": {
        "pestphp/pest": "^2.24",
        "mockery/mockery": "^1.6"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
